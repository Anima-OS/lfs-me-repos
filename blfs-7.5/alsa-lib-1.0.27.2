#!/bin/bash
pkgname=alsa-lib
pkgver=1.0.27.2
pkgver_postfix=

sources=( "http://alsa.cybermirror.org/lib/${pkgname}-${pkgver}.tar.bz2" )
sha1sums=( '9cd50f4b5f07d5e7213dd1277b8673e677804cf8' )

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.bz2" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    ./configure
}
