#!/bin/bash
pkgname=libgusb
pkgver=0.1.6
pkgver_postfix=

sources=( "http://people.freedesktop.org/~hughsient/releases/${pkgname}-${pkgver}.tar.xz" )

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    ./configure --prefix=/usr --disable-static
}
