#!/bin/bash
pkgname=graphite2
pkgver=1.2.4
pkgver_postfix=

sources=( "http://downloads.sourceforge.net/silgraphite/${pkgname}-${pkgver}.tgz" )
sha1sums=( '5b3a907fee3ce0c6efcc2b31d0d98939ec031b7d' )

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tgz" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    mkdir build
    cd build
    cmake -DCMAKE_INSTALL_PREFIX=/usr ..
}

