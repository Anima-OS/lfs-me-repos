#!/bin/bash
pkgname=libtiff
pkgver=4.0.3
pkgver_postfix=

sources=( "http://download.osgeo.org/${pkgname}/tiff-${pkgver}.tar.gz" )
sha1sums=( '652e97b78f1444237a82cbcfe014310e776eb6f0' )

lfs_me_prepare() {
    tar -xf "${sources_dir}/tiff-${pkgver}.tar.gz" -C "$build_dir"

    cd "${build_dir}/tiff-${pkgver}"

    sed -i '/glDrawPixels/a glFlush();' tools/tiffgt.c
    ./configure --prefix=/usr --disable-static
}
