#!/bin/bash
pkgname=libpwquality
pkgver=1.2.3
pkgver_postfix=

sources=( "https://fedorahosted.org/releases/l/i/${pkgname}/${pkgname}-${pkgver}.tar.bz2" )
sha1sums=( 'de21e7208a215b656a5ee5346c3feb357d2328b5' )

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.bz2" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    ./configure --prefix=/usr \
               --sysconfdir=/etc \
               --localstatedir=/var \
               --with-python-rev=2.7
}

lfs_me_check() {
    return
}
