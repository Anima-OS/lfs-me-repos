#!/bin/bash
pkgname=gcr
pkgver=3.10.1
pkgver_postfix=

sources=( "http://ftp.gnome.org/pub/gnome/sources/${pkgname}/3.10/${pkgname}-${pkgver}.tar.xz" )
sha1sums=( 'ebd8a0f894aaa66e6f57c1e99e143bada007fe8a' )

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    ./configure --prefix=/usr --sysconfdir=/etc --enable-gtk-doc
}
