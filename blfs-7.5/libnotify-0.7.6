pkgname=libnotify
pkgver=0.7.6
pkgver_postfix=

sources=( "http://ftp.gnome.org/pub/gnome/sources/${pkgname}/0.7/${pkgname}-${pkgver}.tar.xz" )
sha1sums=( '956ce02a9f2c9fb74a81a765358131efdb7bf536' )

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    ./configure --prefix=/usr --disable-static --enable-gtk-doc
}

