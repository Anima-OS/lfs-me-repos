#!/bin/bash
pkgname=libogg
pkgver=1.3.1
pkgver_postfix=

sources=( "http://downloads.xiph.org/releases/ogg/${pkgname}-${pkgver}.tar.xz" )
sha1sums=( 'a4242415a7a9fd71f3092af9ff0b9fa630e4d7bd' )

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    ./configure --prefix=/usr --docdir="/usr/share/doc/${pkgname}-${pkgver}" --disable-static
}
