#!/bin/bash
pkgname=libxklavier
pkgver=5.3
pkgver_postfix=

sources=( "http://ftp.gnome.org/pub/gnome/sources/${pkgname}/${pkgver}/${pkgname}-${pkgver}.tar.xz" )
sha1sums=( 'dc5e824c738520229174ba9481f0cab35be4870f' )

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    ./configure --prefix=/usr --disable-static --with-xkb-base="$XORG_PREFIX/share/X11/xkb" --enable-gtk-doc
}

lfs_me_check() {
    return
}
