#!/bin/bash
pkgname=librsvg
pkgver=2.40.1
pkgver_postfix=

sources=( "http://ftp.gnome.org/pub/gnome/sources/${pkgname}/2.40/${pkgname}-${pkgver}.tar.xz" )
sha1sums=( 'abbfed10433b26e88f18fe62a9b84d48fc00b9e1' )

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    ./configure --prefix=/usr \
                --enable-vala \
                --disable-static \
                --enable-gtk-doc
}
