#!/bin/bash
pkgname=lxappearance
pkgver=0.5.5
pkgver_postfix=

sources=( "http://downloads.sourceforge.net/lxde/${pkgname}-${pkgver}.tar.xz" )
sha1sums=( '5497886d84bfdac0c18709e076b4acd96caba912' )

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    ./configure --prefix=/usr     \
                --sysconfdir=/etc \
                --disable-static  \
                --enable-man      \
                --enable-dbus
}

lfs_me_check() {
    return
}
