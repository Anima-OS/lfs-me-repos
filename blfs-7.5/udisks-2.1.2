#!/bin/bash
pkgname=udisks
pkgver=2.1.2
pkgver_postfix=

sources=( "http://udisks.freedesktop.org/releases/${pkgname}-${pkgver}.tar.bz2" )
sha1sums=( '093dc9a32752b63819e5d6856a8b0e3ba6d6d902' )

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.bz2" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    ./configure --prefix=/usr        \
                --sysconfdir=/etc    \
                --localstatedir=/var \
                --disable-static     \
                --enable-gtk-doc
}
