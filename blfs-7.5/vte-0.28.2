#!/bin/bash
pkgname=vte
pkgver=0.28.2
pkgver_postfix=

sources=( "http://ftp.gnome.org/pub/gnome/sources/${pkgname}/0.28/${pkgname}-${pkgver}.tar.xz" )
sha1sums=( 'b0af0701ef9d6c7ede9c578366b12a70ac47ab66' )

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    ./configure --prefix=/usr \
                --libexecdir=/usr/lib/vte \
                --disable-static
}
