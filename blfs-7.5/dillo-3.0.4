#!/bin/bash
pkgname=dillo
pkgver=3.0.4
pkgver_postfix=

sources=( "http://www.dillo.org/download/${pkgname}-${pkgver}.tar.bz2" )
sha1sums=( '69be51126c9f65a86eb1da76bb2042b421b866a0' )

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.bz2" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    ./configure --prefix=/usr --sysconfdir=/etc --enable-cookies --enable-dlgui --enable-ssl
}

lfs_me_check() {
    return
}

