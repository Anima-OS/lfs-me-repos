pkgbuild_version=4
pkgname=diffutils
pkgver=3.3

dependencies=(
    "!$pkgname"
	'glibc'
	'bash'
)
sources=(
    "http://ftp.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.xz"
)
sha1sums=(
    6463cce7d3eb73489996baefd0e4425928ecd61e
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"

	./configure --prefix=/tools
}

lfs_me_install() {
	cd "${build_dir}/${pkgname}-${pkgver}"
    make DESTDIR="$fakeroot_dir" install

    #don't overwrite info pages
    rm "${fakeroot_dir}/tools/share/info/dir"
}

lfs_me_postinstall() {
    install-info /tools/share/info/diffutils.info /tools/share/info/dir
}

lfs_me_preremove() {
    install-info --delete /tools/share/info/diffutils.info /tools/share/info/dir
}

