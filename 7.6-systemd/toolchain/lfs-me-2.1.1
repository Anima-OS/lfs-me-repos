pkgbuild_version=3
pkgname=lfs-me
pkgver=2.1.1

dependencies=(
	'bash'
    'rsync'
    'coreutils'
    'grep'
    'sed'
    'gawk'
    'make'
)
sources=(
    "https://github.com/FSMaxB/${pkgname}/archive/${pkgver}.tar.gz"
)
sha1sums=(
    3b0242e10c222e122928b300288b74156464ab35
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgver}.tar.gz" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"
}

lfs_me_build() {
    return
}

lfs_me_check() {
    return
}

lfs_me_install() {
	cd "${build_dir}/${pkgname}-${pkgver}"
    mkdir -pv "${fakeroot_dir}/tools"{/bin,/share/{,/doc}/lfs-me}

    install -v -m 755 lfs-me "${fakeroot_dir}/tools/bin"
    install -v -m 644 README.md Changelog.md KNOWN_ISSUES "${fakeroot_dir}/tools/share/doc/lfs-me"
    install -v -m 644 PKGBUILD.proto "${fakeroot_dir}/tools/share/lfs-me"
}

