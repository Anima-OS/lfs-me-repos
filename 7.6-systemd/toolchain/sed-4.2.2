pkgbuild_version=4
pkgname=sed
pkgver=4.2.2

dependencies=(
    "!$pkgname"
	'bash'
)
sources=(
    "http://ftp.gnu.org/gnu/${pkgname}/${pkgname}-${pkgver}.tar.bz2"
)
sha1sums=(
    f17ab6b1a7bcb2ad4ed125ef78948092d070de8f
)

lfs_me_prepare() {
	tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.bz2" -C "$build_dir"

	cd "${build_dir}/${pkgname}-${pkgver}"

	./configure --prefix=/tools
}

lfs_me_install() {
	cd "${build_dir}/${pkgname}-${pkgver}"
    make DESTDIR="$fakeroot_dir" install

    #don't overwrite info pages
    rm "${fakeroot_dir}/tools/share/info/dir"
}

lfs_me_postinstall() {
    install-info /tools/share/info/sed.info /tools/share/info/dir
}

lfs_me_preremove() {
    install-info --delete /tools/share/info/sed.info /tools/share/info/dir
}

