#!/bin/bash
pkgname=grub
pkgver=2.00
pkgver_postfix=

lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    sed -i -e '/gets is a/d' grub-core/gnulib/stdio.in.h

    ./configure --prefix=/usr          \
                --sbindir=/sbin        \
                --sysconfdir=/etc      \
                --disable-grub-emu-usb \
                --disable-efiemu       \
                --disable-werror
}

lfs_me_check() {
    return
}
