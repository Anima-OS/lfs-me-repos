#!/bin/bash
pkgname=gettext
pkgver=0.18.3.2
pkgver_postfix=

pkg_prepare() {
    #extract
    tar -xf ${pkgname}-${pkgver}.tar.gz -C ${build_dir}

    cd ${build_dir}/${pkgname}-${pkgver}

    cd ${pkgname}-tools
    EMACS="no" ./configure --prefix=/tools --disable-shared
}

pkg_build() {
    make -C gnulib-lib
    make -C src msgfmt
    make -C src msgmerge
    make -C src xgettext

}

pkg_check() {
    return
}

pkg_install() {
    mkdir -pv ${fakeroot_dir}/tools/bin
    cp -v src/{msgfmt,msgmerge,xgettext} ${fakeroot_dir}/tools/bin/
}

pkg_postinstall() {
    return
}

pkg_remove() {
    return
}
