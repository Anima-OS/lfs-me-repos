#!/bin/bash
pkgname=fakeroot
pkgver=1.18.4
pkgver_postfix=

pkg_prepare() {
    #extract
    tar -xf ${pkgname}_${pkgver}.orig.tar.bz2 -C ${build_dir}

    cd ${build_dir}/${pkgname}-${pkgver}

    ./configure --prefix=/tools
}

pkg_build() {
    make
}

pkg_check() {
    return
}

pkg_install() {
    make DESTDIR="${fakeroot_dir}" install
}

pkg_postinstall() {
    return
}

pkg_remove() {
    return
}
