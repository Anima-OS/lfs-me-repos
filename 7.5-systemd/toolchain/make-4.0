#!/bin/bash
pkgname=make
pkgver=4.0
pkgver_postfix=

pkg_prepare() {
    #extract
    tar -xf ${pkgname}-${pkgver}.tar.bz2 -C ${build_dir}

    cd ${build_dir}/${pkgname}-${pkgver}

    ./configure --prefix=/tools --without-guile
}

pkg_build() {
    make
}

pkg_check() {
    return
}

pkg_install() {
    make DESTDIR="${fakeroot_dir}" install
}

pkg_postinstall() {
    return
}

pkg_remove() {
    return
}
