#!/bin/bash
pkgname=m4
pkgver=1.4.17
pkgver_postfix=

pkg_prepare() {
    #extract
    tar -xf ${pkgname}-${pkgver}.tar.xz -C ${build_dir}

    cd ${build_dir}/${pkgname}-${pkgver}

    ./configure --prefix=/tools
}

pkg_build() {
    make
}

pkg_check() {
    return
}

pkg_install() {
    make DESTDIR="${fakeroot_dir}" install
}

pkg_postinstall() {
    return
}

pkg_remove() {
    return
}
