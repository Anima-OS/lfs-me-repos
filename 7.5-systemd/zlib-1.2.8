#!/bin/bash
pkgname=zlib
pkgver=1.2.8
pkgver_postfix=

# All the following functions are already provided and you only need them if they differ
lfs_me_prepare() {
    tar -xf "${sources_dir}/${pkgname}-${pkgver}.tar.xz" -C "$build_dir"

    cd "${build_dir}/${pkgname}-${pkgver}"

    ./configure --prefix=/usr
}

lfs_me_install() {
    make DESTDIR="${fakeroot_dir}" install

    mkdir -pv "${fakeroot_dir}/lib"
    mv -v "$fakeroot_dir"/usr/lib/libz.so.* "${fakeroot_dir}/lib"
    ln -sfv ../../lib/$(readlink "${fakeroot_dir}/usr/lib/libz.so") "${fakeroot_dir}/usr/lib/libz.so"
}
